BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_miles
            text: '0'
            multiline: False
            font_size: 32
            size_hint_x: 2
            background_color: (1, 1, 1, 1)
            foreground_color: (0, 0, 0, 1)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 1
            spacing: 5

            Button:
                text: 'Up'
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
                on_press: app.handle_increment(input_miles.text, 1)

            Button:
                text: 'Down'
                background_color: (0.3, 0.3, 0.3, 1)
                color: (1, 1, 1, 1)
                on_press: app.handle_increment(input_miles.text, -1)

    Button:
        text: 'Convert'
        font_size: 24
        size_hint_y: 0.5
        background_color: (0.3, 0.3, 0.3, 1)
        color: (1, 1, 1, 1)
        on_press: app.handle_convert(input_miles.text)

    Label:
        text: app.output_text
        font_size: 28
        color: (1, 1, 0, 1)
        canvas.before:
            Color:
                rgba: (0, 0, 0, 1)
            Rectangle:
                pos: self.pos
                size: self.size
